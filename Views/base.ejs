<%- include('header') %>
<section class="wraper">
    <div class="container text-center center-div" id="login">
        <div class="container w-25 border py-5" id="form-block">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login</h2>
                <span>Log in for the existing user</span>
            </div>
            <form action="/login" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email" name="email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <p><%= locals.message %></p>
                <button type="submit" class="btn my-3 btn-primary rounded-pill mx-1">Submit</button>
                    <button type="submit" class="btn my-3 btn-primary rounded-pill mx-1"><a href='/signup' class="custom-link">Signup</a></button>
            </form>
        </div>
    </div>
</section>
<%- include('footer') %>
